<h1>Editing Book</h1>
<% if @list.errors.any? %>
  <%= @list.errors.count %> error prohibited this book from being saved:
  <ul>
    <% @list.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
<%= form_with model: @list,url:update_list_path(@list.id), method: :patch do |f| %>

<h2>Title</h2>
 <%= f.text_field :title %>

<h2>Body</h2>
 <%= f.text_area :body %>
 <%= f.submit 'Update Book' %>

<%= link_to "Edit", edit_list_path(@list.id) %>
<%= link_to "Back", "/lists" %>

<% end %>